{
  "name": "garbanzo",
  "version": "0.1.0",
  "description": "Garbanzo Bean â€” WhatsApp community bot for a Boston-area meetup group",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:once": "tsx src/index.ts",
    "setup": "node scripts/setup.mjs",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "audit:secrets": "bash scripts/audit-secrets.sh",
    "check": "npm run audit:secrets && npm run typecheck && npm run lint && npm run test",
    "gh:status": "bash scripts/gh-workflow.sh status",
    "gh:whoami": "bash scripts/gh-workflow.sh whoami",
    "gh:dependabot": "bash scripts/gh-workflow.sh dependabot",
    "gh:ensure": "bash scripts/gh-workflow.sh ensure",
    "gh:switch:owner": "bash scripts/gh-workflow.sh switch-owner",
    "gh:switch:author": "bash scripts/gh-workflow.sh switch-author",
    "rotate:gh-secrets": "bash scripts/rotate-gh-secrets.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Josh Hickman",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.16",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "openai": "^6.22.0",
    "pdf-lib": "^1.17.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode-terminal": "^0.12.0",
    "zod": "^3.24.2"
