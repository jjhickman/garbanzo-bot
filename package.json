  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.16",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "openai": "^6.22.0",
    "pdf-lib": "^1.17.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.0.0",
    "qrcode-terminal": "^0.12.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "eslint": "^9.20.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
